<resources>
    <!-- Base application theme. -->
    <style name="Theme.ImageLoaderApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorControlNormal">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
    </style>

    <style name="Theme.ImageLoaderApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowExitAnimation">@anim/slide_down</item>
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
    </style>

</resources>